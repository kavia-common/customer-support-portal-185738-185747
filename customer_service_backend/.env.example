# Backend environment variables
# IMPORTANT: Copy this file to .env and set values for your environment.

# Secret key for JWT signing
SECRET_KEY=change_me_super_secret

# Database connection string (e.g., for SQLite, Postgres, etc.)
# Example SQLite: sqlite:///./app.db
# Example Postgres: postgresql+psycopg2://user:password@localhost:5432/support
DATABASE_URL=sqlite:///./app.db

# CORS allowed origins (comma-separated). Include the frontend URL.
# Example for local dev:
CORS_ALLOW_ORIGINS=http://localhost:3000

# Server host and port (if applicable to your startup script)
HOST=0.0.0.0
PORT=3001
